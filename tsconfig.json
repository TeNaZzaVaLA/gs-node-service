{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
